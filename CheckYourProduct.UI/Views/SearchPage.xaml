<UserControl x:Class="CheckYourProduct.UI.Views.SearchPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CheckYourProduct.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Content="Back"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="15"/>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <TextBox x:Name="TextBox_Search"
                     Text="Search" 
                     Opacity="50"
                     Width="125"/>
            <Button x:Name="Button_Search"
                    Content="Search"
                    Margin="15 0 0 0"
                    Click="SearchButton"/>
        </StackPanel>
        <ListView x:Name="TestListView"
                  VerticalAlignment="Bottom"
                  HorizontalAlignment="Right"
                  Margin="15">
            <ListViewItem Content="{Binding Path=Name}"/>
            <ListViewItem Content="{Binding Path=Category}"/>
        </ListView>
    </Grid>
</UserControl>
